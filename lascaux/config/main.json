{
    "title": "Lascaux Framework",
    "version": "2.0",

    "server": {
        "server": "simplewsgi",
        "host": "127.0.0.1",
        "port": "8080"
    },

    "paths": {
        "tmp": "./tmp"
    },
    
    "defaults": {
        "redirect_code": "300 MULTIPLE CHOICES"
    },

    "session": {
        "cookie_uuid_key": "lascaux_session_uuid",
        "storage": "json_file",
        "store_path": "./tmp/session_data"
    },

    "security": {
        "salt": "salt",
        "pepper": "pepper"
    }
}
